@import 'reset.css'
@import '../../elf'

// debug()

html
  padding: 3rem

body
  font-family: 'Roboto', sans-serif
  color: #444

h1
  font-size: 2rem
  text-align: center
  font-weight: 100

h1, h2
  margin: 0 0 1rem

code
  font-family: 'Source Code Pro', monospace

section
  cf()
  overflow: hidden
  h2
    font-size: 1.5rem
    line-height: 1
    border-bottom: 1px solid #CCC
    padding: 0 0 1rem
    margin: 5rem 0 1.5rem
    small
      color: lighten(#444, 10%)
      font-weight: 100

.block
  background: #CCC
  text-align: center
  padding: 1rem
  height: 150px

#column
  .block
    column(1/3)
    cycle(3)
    height: 150px
    margin-bottom: 30px

#offset
  .block
    column(1/2)
    offset(1/2)

#span
  .block
    span(1/3)
    height: 150px
    &:nth-child(2n)
      background: lighten(#CCC, 20%)

#shift
  .block
    column(1/2)
    cycle(1/2)
    &:nth-child(1)
      shift(1/2)
    &:nth-child(2)
      shift(-1/2)
